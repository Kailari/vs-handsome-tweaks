{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Client (Debug)",
            "type": "coreclr",
            "request": "launch",
            "program": "${env:VINTAGE_STORY}/Vintagestory.exe",
            "linux": {
                "program": "${env:VINTAGE_STORY}/Vintagestory"
            },
            "osx": {
                "program": "${env:VINTAGE_STORY}/Vintagestory"
            },
            "preLaunchTask": "build",
            "args": [
                //"--playStyle",
                //"preset-surviveandbuild",
                //"--openWorld",
                //"modding test world",
                "--tracelog",
                "--dataPath",
                "${workspaceFolder}/run-client",
                "--addModPath",
                "${workspaceFolder}/HandsomeTweaks/bin/Debug/Mods",
                "--addOrigin",
                "${workspaceFolder}/HandsomeTweaks/assets"
            ],
            "console": "internalConsole",
            "env": {
                // FIXME: Temporary workaround for odd behaviour with multiple monitors and fractional scaling
                // - enforce wayland to work through Xwayland instead of native support
                // - this has performance implications, but fixes the window having different size than the framebuffers
                "XDG_SESSION_TYPE": "x11",
            },
            "stopAtEntry": false
        },
        {
            "name": "Launch Server",
            "type": "coreclr",
            "request": "launch",
            "program": "${env:VINTAGE_STORY}/VintagestoryServer.exe",
            "linux": {
                "program": "${env:VINTAGE_STORY}/VintagestoryServer"
            },
            "osx": {
                "program": "${env:VINTAGE_STORY}/VintagestoryServer"
            },
            "preLaunchTask": "build",
            "args": [
                "--tracelog",
                "--dataPath",
                "${workspaceFolder}/run-server",
                "--addModPath",
                "${workspaceFolder}/HandsomeTweaks/bin/Debug/Mods",
                "--addOrigin",
                "${workspaceFolder}/HandsomeTweaks/assets"
            ],
            "console": "internalConsole",
            "stopAtEntry": false
        },
        {
            "name": "CakeBuild",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build (Cake)",
            "program": "${workspaceFolder}/CakeBuild/bin/Debug/net7.0/CakeBuild.dll",
            "args": [],
            "cwd": "${workspaceFolder}/CakeBuild",
            "stopAtEntry": false,
            "console": "internalConsole"
        }
    ]
}